{
  "name": "pk-ts-fe-lib",
  "version": "l.0.1",
  "author": "Paul Kirkaas",
  "license": "UNLICENSED",
  "description": "TS/JS Front End (React & SASS) Utilities",
  "private": true,
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./tsconfig.json": "./tsconfig.json",
    "./tsconfig.cjs.json": "./tsconfig.cjs.json",
    "./reset.css": {
      "require" :"./src/Reset-Css-2023.css",
      "import" :"./src/Reset-Css-2023.css"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist ./package-lock.json ./node_modules && npm i",
    "reset": "npm run clean && npm run build",
    "dev": "vite",
    "buildx": "tsc && vite build",
    "build": "npm run build-lib && vite build",
    "build-lib": "tsc",
    "xbuild-lib": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "*",
    "@emotion/styled": "*",
    "@mui/material": "*",
    "@popperjs/core": "*",
    "@preact/signals-react": "^1.3.6",
    "@types/node": "^20.8.9",
    "bootstrap": "*",
    "classnames": "*",
    "formik": "*",
    "pk-ts-common-lib": "git+https://github.com/pkirkaas/pk-ts-common-lib.git#working",
    "react": "*",
    "react-bootstrap": "*",
    "react-dom": "*",
    "react-resizable-panels": "*",
    "react-select": "^5.7.7",
    "reactjs-popup": "*",
    "sass": "*",
    "styled-components": "*",
    "yup": "*"
  },
  "devDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "@vitejs/plugin-react": "*",
    "typescript": "*",
    "vite": "*"
  }
}
